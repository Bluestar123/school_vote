.list {
  flex-wrap: wrap;
  background: #fff;
}
.list-item {
  width: 330rpx;
  height: 372rpx;
  box-shadow: 0px 2px 20px 0px rgba(0, 0, 0, 0.05);
  border-radius: 8px 8px 0px 0px;
  border: 1px solid #F7F7F7;
