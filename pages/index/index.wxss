/**index.wxss**/
.audio-icon {
  position: fixed;
  right: 30rpx;
  top: 96rpx;
  width: 46rpx;
  height: 46rpx;
  font-size: 16rpx;
  background: #000000;
  opacity: 0.6;
  color: #fff;
}
.audio-icon image {
  width: 20rpx;
  height: 20rpx;
}

.audio-on {
  animation: audio-rotate 4s linear infinite;
}

/* 旋转动画 */
@keyframes audio-rotate {
  0% {
    transform: rotateZ(0deg);
  }

  100% {
    transform: rotateZ(360deg);
  }
}

.adimg {
  height: 360rpx;
}

.time-count-down {
  width: 690rpx;
  height: 74rpx;
  background: #FEF2E5;
  border-radius: 8rpx;
  color: #FE8302;
  font-size: 26rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
}

.divid-line {
  height: 16rpx;
  background: #F7F7F7;
}

.rank-list {
  padding: 30rpx;
}
.input-el {
  margin-bottom: 30rpx;
}
.input-view {
  width: 522rpx;
  height: 60rpx;
  border-radius: 30px;
  border: 1px solid #CCCCCC;
  padding:0 29rpx 0 38rpx;
}
input {
  color:#999;font-size:26rpx
}
.search {
  width: 29.86rpx;
  height: 29.82rpx;
}

.input-view + text {
  font-size: 32rpx;
  color: #FE8302;
  padding-left: 19rpx;
