}
.list-item image {
  height: 220rpx;
  margin-bottom: 30rpx;
}

.to-top {
  position: fixed;
  right: 30rpx;
  bottom: 50rpx;
  width: 60rpx;
  height: 60rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 2rpx 15rpx 0rpx rgba(0, 0, 0, 0.1);
}
.to-top image {
  width: 19.9rpx;
  height: 25.34rpx;
  overflow: hidden;
}

.item-popularity {
  font-size: 24rpx;
  color:#fe8302;
  margin-top: 10rpx;
}
.item-num {
  font-size: 32rpx;
  font-family: TencentSansW7;
  margin-right: 10rpx;
}
.item-name {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
}
.item-vote {
  width: 116rpx;
  height: 50rpx;
  background: linear-gradient(90deg, #FE8302 0%, #FEBA32 100%);
  border-radius: 25rpx;
  font-size: 26rpx;
  color:#fff;
}

.view-more {
  color: #666;
  font-size: 24rpx;
}