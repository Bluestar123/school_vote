/* pages/profile/index.wxss */
page {
  background: #F7F7F7;
}
.top {
  background-color: #fff;
  margin-bottom: 16rpx;
}
.profile {
  padding: 30rpx 60rpx;
  border-radius: 8rpx;
}
.profile .avatar {
  width: 120rpx;
  height: 120rpx;
  border:5rpx solid #C0C8CD;
  margin-right: 20rpx;
  overflow: hidden;
  box-shadow: 0px 2px 20px 0px rgba(0, 0, 0, 0.05);
}
.name{
  margin-bottom: 13rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
}
.gender {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.words {
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
}

.grid {
  padding: 0 30rpx;
  height: 157rpx;
}

.action {
  padding: 0 138rpx;
}
.action image {
  width: 100rpx;
  height: 100rpx;
}
.action .img {
  flex-wrap: wrap;
}
.action .img:first-child {
  margin-right: 248rpx;
}
.action .img text {
  padding-top: 20rpx;
  padding-bottom: 30rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  white-space: nowrap;
}

.bottom .user-info {
  margin:16rpx 32rpx 37rpx 28rpx;
  background-color: #F6EADD;
  border-radius: 8rpx;
  padding: 30rpx;
}
.title text{
  color: #CD6900;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  margin: 0 20rpx;
}
.title image {
  width: 151rpx;
  height: 16rpx;
}

.info {
  margin-top: 34rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #CD6900;
}
.info view {
  margin-bottom: 20rpx;
}
.info view:last-child {
  margin: 0
}

.action-btn {
  background-color: #fff;
  padding: 30rpx;
}
.action-btn view {
  width: 330rpx;
  height: 90rpx;
  background: #FE8302;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
}
.action-btn view:first-child {
  margin-right: 30rpx;
}